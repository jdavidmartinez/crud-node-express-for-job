<%- include('partials/_header'); -%>

    
    <div class="container">
        
        <div class="row">
            <!--FORM-->
                <div class="col-md-5">
                    <div class="card">
                        <div class="card-body">
                            <form action="/add" method="POST">
                              <div class="form-group">
                                  <input type="text" name="title" placeholder="Insert a Location" class="form-control">
                              </div>  
                                 <div class="form-group">
                                     <input name = "description" placeholder = "Insert a description to get that location" cols = "80"  class = "form-control">
                                 </input>
                                 </div>
                            <button type="submit" name="buttom" class="btn btn-primary btn-block">Add</button>    
                            </form>
                            
                        </div>
                    </div>
                </div>
                                   
            <!--LIST-->
            <div class="col-md-7">
                <table class="table table-bordered table-hover">
                 <thead>
                    <tr>
                    <th>NÂ°</th>
                    <th>Location</th>
                    <th>Description</th>
                    <th>Operation</th>

                    </tr>
                    </thead>
                      <tbody>
                        <% for(let i=0; i<location.length; i++){ %>
                           <tr>
                               <td><%= i + 1%></td>
                               <td><%= location[i].title %></td>
                               <td><%= location[i].description %></td>
                               <td>
                                   <a href="/turn/<%= location[i]._id %>" 
                                    class="btn <%= location[i].status ? 'btn-success' : 'btn-dark' %>">
                                    Done
                                   </a>
                                   <a href="/delete/<%= location[i]._id %>" class="btn btn-danger">Delete</a>
                                   <a href="/edit/<%= location[i]._id %>" class="btn btn-info">Edit</a>
                               </td>
                           </tr>
                       <% } %>
                    </tbody>
                </table>
            </div> 
        </div>

    </div>

    <%- include('partials/_footer'); -%>